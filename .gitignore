# Production-Ready .gitignore for Django Railway Deployment

# === SENSITIVE FILES (NEVER COMMIT) ===
# Environment variables with secrets
.env
.env.local
.env.*.local
.env.development
.env.staging
.env.production.local

# Security certificates and keys
*.pem
*.key
*.crt
*.p12
*.pfx

# === PYTHON BYTECODE AND CACHE ===
__pycache__/
*.py[cod]
*$py.class
*.pyc
*.pyo
*.pyd
.Python

# === BUILD AND DISTRIBUTION ===
build/
develop-eggs/
dist/
downloads/
eggs/
.eggs/
lib/
lib64/
parts/
sdist/
var/
wheels/
*.egg-info/
.installed.cfg
*.egg
*.manifest
*.spec

# === DATABASES ===
# SQLite databases (use PostgreSQL in production)
db.sqlite3
db.sqlite3-shm
db.sqlite3-wal
*.sqlite3
*.sqlite3-shm
*.sqlite3-wal
*.db

# Database dumps
*.sql
*.dump

# === DJANGO SPECIFIC ===
# Local settings (use environment variables instead)
local_settings.py
settings_local.py

# Static and media files (handled by WhiteNoise and cloud storage)
/static/
/staticfiles/
/media/
/mediafiles/

# Django logs
*.log
logs/

# Django migrations (keep these, but exclude local test migrations)
# migrations/

# === VIRTUAL ENVIRONMENTS ===
venv/
.venv/
env/
ENV/
env.bak/
venv.bak/
virtualenv/
.virtualenv/
pyvenv.cfg

# === TESTING AND COVERAGE ===
.tox/
.coverage
.coverage.*
.cache
.pytest_cache/
nosetests.xml
coverage.xml
*.cover
.hypothesis/
htmlcov/

# === DEVELOPMENT TOOLS ===
# IDEs
.idea/
.vscode/
*.swp
*.swo
*~

# Text editors
.spyderproject
.spyproject
.ropeproject

# macOS
.DS_Store
.AppleDouble
.LSOverride

# Windows
Thumbs.db
ehthumbs.db
Desktop.ini

# === TYPE CHECKING ===
.mypy_cache/
.dmypy.json
dmypy.json
.pyre/

# === JUPYTER NOTEBOOKS ===
.ipynb_checkpoints

# === DOCUMENTATION ===
/site
docs/_build/

# === TEMPORARY FILES ===
*.tmp
*.temp
*.bak
*.backup

# === DEPLOYMENT ===
# Deployment manifests (generated)
deployment_manifest.json
.deploy_backup/

