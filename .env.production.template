# Production Environment Variables for Adakings Backend API
# Configuration for production deployment

# Django Settings
DJANGO_ENVIRONMENT=production
DJANGO_SECRET_KEY=your-super-secret-production-key-here
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=yourdomain.com,api.yourdomain.com,www.yourdomain.com

# Database Configuration (PostgreSQL)
DB_NAME=adakings_prod
DB_USER=adakings_user
DB_PASSWORD=your-secure-database-password
DB_HOST=localhost
DB_PORT=5432

# Email Configuration (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@yourdomain.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Paystack Configuration (Live Keys)
PAYSTACK_PUBLIC_KEY_LIVE=pk_live_your_live_public_key
PAYSTACK_SECRET_KEY_LIVE=sk_live_your_live_secret_key

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com,https://www.yourdomain.com
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com,https://app.yourdomain.com

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://127.0.0.1:6379/1

# Security Headers
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Monitoring & Logging
SENTRY_DSN=your-sentry-dsn-url
LOG_LEVEL=INFO

# Performance Settings
MAX_UPLOAD_SIZE=10485760
CACHE_TIMEOUT=300

# API Rate Limiting
RATE_LIMIT_ENABLE=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
