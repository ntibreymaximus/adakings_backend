# Production Environment Variables for Railway Deployment
# These are templates - actual values will be set in Railway dashboard

# Django Settings
DJANGO_ENVIRONMENT=production
DJANGO_SECRET_KEY=${DJANGO_SECRET_KEY}
DJANGO_DEBUG=False
# DJANGO_ALLOWED_HOSTS is auto-configured for Railway

# Database Configuration (PostgreSQL on Railway)
DATABASE_ENGINE=postgresql
DB_NAME=${PGDATABASE}
DB_USER=${PGUSER}
DB_PASSWORD=${PGPASSWORD}
DB_HOST=${PGHOST}
DB_PORT=${PGPORT}

# Security Settings
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# CORS Configuration
CORS_ALLOWED_ORIGINS=${FRONTEND_URL}
# CSRF_TRUSTED_ORIGINS is auto-configured for Railway

# Email Configuration (you'll need to configure this with your email provider)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=${EMAIL_HOST}
EMAIL_PORT=${EMAIL_PORT}
EMAIL_HOST_USER=${EMAIL_HOST_USER}
EMAIL_HOST_PASSWORD=${EMAIL_HOST_PASSWORD}
DEFAULT_FROM_EMAIL=noreply@adakings.com

# Paystack Configuration (Production Keys)
PAYSTACK_PUBLIC_KEY_LIVE=${PAYSTACK_PUBLIC_KEY_LIVE}
PAYSTACK_SECRET_KEY_LIVE=${PAYSTACK_SECRET_KEY_LIVE}

# Monitoring
SENTRY_DSN=${SENTRY_DSN}
LOG_LEVEL=INFO

# Performance Settings
MAX_UPLOAD_SIZE=10485760
CACHE_TIMEOUT=300

# API Rate Limiting
RATE_LIMIT_ENABLE=True
RATE_LIMIT_REQUESTS=600
RATE_LIMIT_WINDOW=3600
