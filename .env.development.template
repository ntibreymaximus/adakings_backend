# Development Environment Variables for Adakings Backend API
# Configuration for local development environment

# Django Settings
DJANGO_ENVIRONMENT=development
DJANGO_SECRET_KEY=django-insecure-dev-key-change-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost,0.0.0.0

# Database Configuration (SQLite for development)
# For PostgreSQL development, uncomment and configure:
# DB_NAME=adakings_dev
# DB_USER=dev_user
# DB_PASSWORD=dev_password
# DB_HOST=localhost
# DB_PORT=5432

# Email Configuration (Console backend for development)
EMAIL_BACKEND=console

# Paystack Configuration (Test Keys)
PAYSTACK_PUBLIC_KEY=pk_test_your_test_public_key
PAYSTACK_SECRET_KEY=sk_test_your_test_secret_key

# CORS Configuration (Allow all origins for development)
CORS_ALLOW_ALL_ORIGINS=True

# Development Tools
DJANGO_LOG_LEVEL=DEBUG
ENABLE_DEBUG_TOOLBAR=True

# Development Features
ENABLE_SWAGGER_UI=True
ENABLE_REDOC=True
