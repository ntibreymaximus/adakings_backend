# Dev Environment Variables for Adakings Backend API
# Production-like configuration with development-safe values

# Django Settings
DJANGO_ENVIRONMENT=dev
DJANGO_SECRET_KEY=django-dev-secret-key-for-development-only
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost,dev.adakings.local,*.dev.adakings.local

# Database Configuration (PostgreSQL with dev database)
DB_NAME=adakings_dev
DB_USER=dev_user
DB_PASSWORD=dev_password_123
DB_HOST=localhost
DB_PORT=5432

# Email Configuration (Test SMTP or Console)
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_HOST_USER=dev_user
EMAIL_HOST_PASSWORD=dev_password
DEFAULT_FROM_EMAIL=dev@adakings.local

# Paystack Configuration (Test Keys Only)
PAYSTACK_PUBLIC_KEY_LIVE=pk_test_dev_public_key_placeholder
PAYSTACK_SECRET_KEY_LIVE=sk_test_dev_secret_key_placeholder

# CORS Configuration (Dev domains)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://dev.adakings.local
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000,http://dev.adakings.local

# Redis Configuration (Dev instance)
REDIS_URL=redis://127.0.0.1:6379/1

# Security Headers (Production-like but relaxed for development)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# Monitoring & Logging (Dev/Placeholder)
SENTRY_DSN=https://placeholder@sentry.io/dev
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO

# Performance Settings (Production-like)
MAX_UPLOAD_SIZE=5242880
CACHE_TIMEOUT=300

# API Rate Limiting (Production-like but relaxed)
RATE_LIMIT_ENABLE=True
RATE_LIMIT_REQUESTS=500
RATE_LIMIT_WINDOW=3600

# Dev Specific Settings
ENABLE_SWAGGER_UI=True
ENABLE_REDOC=True
ENABLE_DEBUG_TOOLBAR=False

# Dev Environment Features
DEV_EMAIL_BACKEND=smtp
DEV_PAYSTACK_MODE=test
DEV_CACHE_BACKEND=redis

# Testing Configuration
TEST_RUNNER=pytest
TEST_COVERAGE=True

# Development Database Seeding
LOAD_SAMPLE_DATA=True
CREATE_TEST_USERS=True
