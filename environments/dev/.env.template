# Development Environment Variables for Adakings Backend API
# This is a production-like environment with development-friendly values
# Copy this file to .env and update with actual development values

# Django Settings (Production-like but for development)
DJANGO_ENVIRONMENT=dev
DJANGO_SECRET_KEY=django-dev-secret-key-change-this-for-actual-deployment
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=dev.adakings.local,test.adakings.local,localhost,127.0.0.1

# Database Configuration (PostgreSQL for production-like testing)
DB_NAME=adakings_dev
DB_USER=adakings_dev_user
DB_PASSWORD=dev_password_123
DB_HOST=localhost
DB_PORT=5432

# Email Configuration (Development/Testing SMTP)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_mailtrap_user
EMAIL_HOST_PASSWORD=your_mailtrap_password
DEFAULT_FROM_EMAIL=Adakings Dev <dev@adakings.local>

# Paystack Configuration (TEST KEYS ONLY - NEVER use live keys)
PAYSTACK_PUBLIC_KEY_LIVE=pk_test_placeholder_dev_public_key
PAYSTACK_SECRET_KEY_LIVE=sk_test_placeholder_dev_secret_key

# CORS Configuration (Development/Testing Domains)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://dev.adakings.local,https://test.adakings.local
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000,http://dev.adakings.local:8000

# Redis Configuration (Development Cache)
REDIS_URL=redis://127.0.0.1:6379/1

# Security Headers (Relaxed for development)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True

# Monitoring & Logging (Development)
SENTRY_DSN=
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO
LOG_FILE_PATH=/var/log/adakings/dev.log

# Performance Settings (Development)
MAX_UPLOAD_SIZE=26214400
CACHE_TIMEOUT=300
DATABASE_CONN_MAX_AGE=0

# API Rate Limiting (Relaxed for development)
RATE_LIMIT_ENABLE=True
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# Static and Media Files (Development)
STATIC_ROOT=/var/www/adakings/dev/static/
MEDIA_ROOT=/var/www/adakings/dev/media/
STATIC_URL=/static/
MEDIA_URL=/media/

# Development Tools (Enabled)
ENABLE_SWAGGER_UI=True
ENABLE_REDOC=True
ENABLE_DEBUG_TOOLBAR=True

# Development Database (Alternative SQLite for local development)
# Uncomment these and comment PostgreSQL settings above for SQLite
# DATABASE_ENGINE=sqlite3
# DATABASE_NAME=adakings_dev.db

# Development Features
DEV_TOOLBAR_ENABLED=True
DJANGO_EXTENSIONS_ENABLED=True
API_DOCS_ENABLED=True

# Testing Configuration
TEST_DATABASE_PREFIX=test_
FACTORY_BOY_ENABLED=True
PYTEST_ENABLED=True

# Development Server
RUNSERVER_PORT=8000
RUNSERVER_HOST=0.0.0.0

# Development Security (More permissive)
SECURE_REFERRER_POLICY=same-origin
X_FRAME_OPTIONS=SAMEORIGIN
