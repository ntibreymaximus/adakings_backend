# Production Environment Variables for Adakings Backend API
# IMPORTANT: This is the PRODUCTION environment - use only LIVE values

# Django Settings
DJANGO_ENVIRONMENT=production
DJANGO_SECRET_KEY=your-super-secret-production-key-change-this-immediately
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,api.yourdomain.com

# Database Configuration (PostgreSQL with SSL)
DB_NAME=adakings_production
DB_USER=your_production_db_user
DB_PASSWORD=your_secure_production_db_password
DB_HOST=your-production-db-host.com
DB_PORT=5432

# Email Configuration (Live SMTP)
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-production-email@yourdomain.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Paystack Configuration (LIVE KEYS ONLY)
PAYSTACK_PUBLIC_KEY_LIVE=pk_live_your_live_public_key_here
PAYSTACK_SECRET_KEY_LIVE=sk_live_your_live_secret_key_here

# CORS Configuration (Your actual domains)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://app.yourdomain.com
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://api.yourdomain.com

# Redis Configuration (Production instance)
REDIS_URL=redis://your-redis-host:6379/0

# Security Headers (Production settings)
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Monitoring & Logging (Production)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO

# Performance Settings (Production)
MAX_UPLOAD_SIZE=10485760
CACHE_TIMEOUT=3600

# API Rate Limiting (Production)
RATE_LIMIT_ENABLE=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Production Specific Settings
ENABLE_SWAGGER_UI=False
ENABLE_REDOC=False
ENABLE_DEBUG_TOOLBAR=False

# Health Check Settings
HEALTH_CHECK_ACCESS_TOKEN=your-health-check-token

# Backup Configuration
BACKUP_ENABLED=True
BACKUP_RETENTION_DAYS=30

# CDN Configuration (if using)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=your-region
