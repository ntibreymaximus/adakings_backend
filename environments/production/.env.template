# Production Environment Variables for Adakings Backend API
# SECURITY: This is a template file. Create .env with actual production values.
# NEVER commit actual .env files with real credentials to version control.

# Django Settings
DJANGO_ENVIRONMENT=production
DJANGO_SECRET_KEY=your-super-secure-production-secret-key-change-this-to-50+-chars
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,api.yourdomain.com

# Database Configuration (PostgreSQL Production)
DB_NAME=adakings_production
DB_USER=adakings_prod_user
DB_PASSWORD=your-super-secure-database-password
DB_HOST=localhost
DB_PORT=5432

# Email Configuration (Production SMTP)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.yourdomain.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@yourdomain.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=Adakings <noreply@yourdomain.com>

# Paystack Configuration (LIVE KEYS ONLY)
PAYSTACK_PUBLIC_KEY_LIVE=pk_live_your_live_public_key_here
PAYSTACK_SECRET_KEY_LIVE=sk_live_your_live_secret_key_here

# CORS Configuration (Production Domains)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://app.yourdomain.com
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://api.yourdomain.com

# Redis Configuration (Production Cache)
REDIS_URL=redis://127.0.0.1:6379/0

# Security Headers (Production Security)
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# SSL Certificate Paths
SSL_CERTIFICATE_PATH=/etc/ssl/certs/yourdomain.crt
SSL_PRIVATE_KEY_PATH=/etc/ssl/private/yourdomain.key

# Monitoring & Logging (Production)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=WARNING
DJANGO_LOG_LEVEL=WARNING
LOG_FILE_PATH=/var/log/adakings/django.log

# Performance Settings (Production)
MAX_UPLOAD_SIZE=52428800
CACHE_TIMEOUT=3600
DATABASE_CONN_MAX_AGE=600

# API Rate Limiting (Production)
RATE_LIMIT_ENABLE=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Static and Media Files (Production)
STATIC_ROOT=/var/www/adakings/static/
MEDIA_ROOT=/var/www/adakings/media/
STATIC_URL=/static/
MEDIA_URL=/media/

# Backup Configuration
BACKUP_DATABASE=True
BACKUP_MEDIA=True
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30

# Production Tools (Disabled)
ENABLE_SWAGGER_UI=False
ENABLE_REDOC=False
ENABLE_DEBUG_TOOLBAR=False
